# ========================================
# Configuration Docker - SEO Article Generator
# ========================================

# Configuration générale
APP_ENV=production
APP_DEBUG=False
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Base de données MySQL
DB_ROOT_PASSWORD=change-this-root-password
DB_NAME=seo_articles
DB_USER=seoapp
DB_PASSWORD=change-this-database-password

# Port du frontend (exposé sur le Synology)
FRONTEND_PORT=8080

# ========================================
# APIs LLM - À CONFIGURER OBLIGATOIREMENT
# ========================================
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
PERPLEXITY_API_KEY=your_perplexity_key_here

# ========================================
# API Génération d'images
# ========================================
IDEOGRAM_API_KEY=your_ideogram_key_here
REPLICATE_API_TOKEN=your_replicate_token_here
STABILITY_API_KEY=your_stability_key_here

# ========================================
# Services externes
# ========================================
SCRAPING_API_KEY=your_scraping_key_here

# ========================================
# Limites et configuration
# ========================================
MAX_ARTICLE_LENGTH=5000
TIMEOUT_SECONDS=300
MAX_RETRIES=3

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO